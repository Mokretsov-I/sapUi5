<mvc:View
	controllerName="myCalendar.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
	<VBox class="sapUiSmallMargin" id="mainContent">
		<PlanningCalendar
				id="PC1"
				minDate="{path: '/minDate'}"
				startDate="{path: '/startDate'}"
				rows="{path: '/people'}"
				appointmentsVisualization="Filled"
				appointmentSelect=".test">
			<toolbarContent>
				<Title text="Планировщик задач" titleStyle="H4"/>
				<Button
					id="PlanningCalendarCreateTaskButton"
					text="Новая задача"
					press=".newTaskCreate"
					tooltip="Создать новую задачу в общем пуле"/>
			</toolbarContent>
			<rows>
				<PlanningCalendarRow
						icon="{pic}"
						title="{name}"
						text="{role}"
						enableAppointmentsDragAndDrop="true"
						enableAppointmentsResize="true"
						appointmentDrop="handleAppointmentDrop"
						appointmentDragEnter="handleAppointmentDragEnter"
						appointmentResize="handleAppointmentResize"
						appointments="{path : 'appointments', templateShareable: false}"
						nonWorkingDays="5,6"
						nonWorkingHours="0,1,2,3,4,5,6,7,8,18,19,20,21,22,23">
					<appointments>
						<unified:CalendarAppointment
								startDate="{start}"
								endDate="{end}"
								icon="{pic}"
								title="{title}"
								text="{info}"
								type="{type}"
								tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
	</VBox>
</mvc:View>
<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:core="sap.ui.core"
		xmlns:u="sap.ui.unified">
	<ResponsivePopover
    title="Добавить новую задачу"
    placement="Bottom"
    showArrow="false"
    class="create-task">
		<Input
      id="taskName"
      placeholder="Название задачи"/>
    <Input
      id="taskTime"
      placeholder="Трудоемкость"
      type="Number"/>
    <Button
      id="taskSaveButton"
      text="Сохранить"
      press=".saveNewTask"
      tooltip="Создать задачу в общем пуле"/>
	</ResponsivePopover>
</core:FragmentDefinition>